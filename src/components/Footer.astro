---
import { Icon } from "astro-icon/components";
import PeraltaAsociadosLight from "../assets/icons/PeraltaAsociadosLight.astro";
import FacebookLogo from "../assets/icons/FacebookLogo.astro";
import WhatsAppLogo from "../assets/icons/WhatsAppLogo.astro";
import PeraltaAsociados from "../assets/icons/PeraltaAsociados.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary">
  <!-- Primera fila - Logo y descripción -->
  <div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <section
      class="flex flex-col items-center text-center max-w-2xl mx-auto space-y-8"
    >
      <PeraltaAsociadosLight />

      <p class="text-white/80 leading-relaxed">
        Comprometidos con la justicia y el derecho en Huancavelica.
      </p>

      <nav aria-label="Redes sociales" class="flex gap-6">
        <a
          href="https://www.facebook.com/PeraltaAsociadosPeru"
          class="text-white hover:text-white/80 transition-colors duration-300"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Síguenos en Facebook"
        >
          <FacebookLogo />
        </a>
        <a
          href="https://wa.me/976762237"
          class="text-white hover:text-white/80 transition-colors duration-300"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Contáctanos por WhatsApp"
        >
          <WhatsAppLogo />
        </a>
      </nav>
    </section>
  </div>

  <!-- Segunda fila - Información de contacto -->
  <div class="border-t border-white/20 text-center">
    <div class="container mx-auto py-10 px-4 sm:px-6 lg:px-8">
      <h2 class="sr-only">Información de contacto</h2>
      <div
        class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 max-w-6xl mx-auto"
      >
        <!-- Ubicación -->
        <section class="space-y-2">
          <h3
            class="text-gray-400 text-sm font-medium uppercase tracking-wider"
          >
            Ubicación
          </h3>
          <address class="not-italic flex justify-center">
            <a
              href="https://maps.app.goo.gl/xdNuLoFVub7qPK5Q7"
              class="flex items-center gap-3 group"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span
                class="text-white group-hover:text-white/90 transition-colors"
              >
                Jr. Mayta Cápac N° 215
              </span>
            </a>
          </address>
        </section>

        <!-- Teléfono -->
        <section class="space-y-2">
          <h3
            class="text-gray-400 text-sm font-medium uppercase tracking-wider"
          >
            Teléfono
          </h3>
          <address class="not-italic flex justify-center">
            <a href="tel:976762237" class="flex items-center gap-3 group">
              <span
                class="text-white group-hover:text-white/90 transition-colors"
              >
                +51 976 762 237
              </span>
            </a>
          </address>
        </section>

        <!-- Correo -->
        <section class="space-y-2">
          <h3
            class="text-gray-400 text-sm font-medium uppercase tracking-wider"
          >
            Correo
          </h3>
          <address class="not-italic flex justify-center">
            <a
              href="mailto:cyarupaitanp@gmail.com"
              class="flex items-center gap-3 group"
            >
              <span
                class="text-white group-hover:text-white/90 transition-colors"
              >
                cyarupaitanp@gmail.com
              </span>
            </a>
          </address>
        </section>
      </div>
    </div>
  </div>

  <!-- Tercera fila - Copyright -->
  <div class="border-t border-white/20">
    <div class="container mx-auto px-4 py-6">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/60"
      >
        <p class="text-center md:text-left">
          © {currentYear} - Peralta Asociados. Todos los derechos reservados.
        </p>
        <p>
          Desarrollado por
          <a
            href="https://vanchi.pro/"
            class="text-secondary hover:text-secondary/80 transition-colors duration-300"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ivan Yarupaitan Rivera
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
