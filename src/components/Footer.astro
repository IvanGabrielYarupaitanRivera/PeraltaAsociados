---
import { Icon } from "astro-icon/components";
import PeraltaAsociadosLight from "../assets/icons/PeraltaAsociadosLight.astro";
import FacebookLogo from "../assets/icons/FacebookLogo.astro";
import WhatsAppLogo from "../assets/icons/WhatsAppLogo.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary text-white">
  <!-- Primera fila - Contenido principal -->
  <div class="container mx-auto">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-0 rounded-sm">
      <!-- Columna 1 - Logo e información -->
      <section
        class="space-y-6 p-6 py-12 flex flex-col items-center text-center"
      >
        <!-- Logo -->
        <figure>
          <PeraltaAsociadosLight />
        </figure>

        <!-- Descripción -->
        <p class="text-white/80 leading-relaxed max-w-md">
          Comprometidos con la justicia y el derecho en Huancavelica.
        </p>

        <!-- Redes sociales -->
        <nav class="flex items-center gap-4">
          <a
            href="https://www.facebook.com/PeraltaAsociadosPeru"
            class="text-white hover:text-secondary transition-colors duration-300"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en Facebook"
          >
            <FacebookLogo />
          </a>
          <a
            href="https://wa.me/976762237"
            class="text-white hover:text-secondary transition-colors duration-300"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Contáctanos por WhatsApp"
          >
            <WhatsAppLogo />
          </a>
        </nav>
      </section>

      <!-- Columna 2 - Información de contacto -->
      <section
        class="space-y-6 p-6 lg:border-r md:border-x border-t border-white/20 py-12 flex flex-col items-center text-center"
      >
        <header>
          <h2 class="font-serif text-xl text-secondary">Contáctanos</h2>
        </header>

        <address class="space-y-4 not-italic">
          <div class="flex items-center gap-3">
            <Icon
              name="mdi:map-marker"
              class="w-5 h-5 text-secondary flex-shrink-0"
              aria-hidden="true"
            />
            <a
              href="https://maps.app.goo.gl/xdNuLoFVub7qPK5Q7"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Ubicación en Google Maps - Jr. Mayta Cápac N° 215"
            >
              Jr. Mayta Cápac N° 215
            </a>
          </div>

          <div class="flex items-center gap-3">
            <Icon
              name="mdi:phone"
              class="w-5 h-5 text-secondary flex-shrink-0"
              aria-hidden="true"
            />
            <a
              href="tel:976762237"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
            >
              +51 976 762 237
            </a>
          </div>

          <div class="flex items-center gap-3">
            <Icon
              name="mdi:email"
              class="w-5 h-5 text-secondary flex-shrink-0"
              aria-hidden="true"
            />
            <a
              href="mailto:cyarupaitanp@gmail.com"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
            >
              cyarupaitanp@gmail.com
            </a>
          </div>
        </address>
      </section>

      <!-- Columna 3 - Enlaces -->
      <nav
        class="space-y-6 py-12 p-6 hidden lg:block flex-col items-center text-center"
      >
        <header>
          <h2 class="font-serif text-xl text-secondary">Enlaces Rápidos</h2>
        </header>

        <ul class="space-y-3">
          <li>
            <a
              href="/"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
              aria-current="page"
            >
              Inicio
            </a>
          </li>
          <li>
            <a
              href="/servicios"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
            >
              Servicios
            </a>
          </li>
          <li>
            <a
              href="/nosotros"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
            >
              Nosotros
            </a>
          </li>
          <li>
            <a
              href="/contacto"
              class="text-white/80 hover:text-secondary transition-colors duration-300"
            >
              Contacto
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Segunda fila - Copyright -->
  <div class="border-t border-white/20">
    <div class="container mx-auto px-4 py-6">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/60"
      >
        <p>
          © {currentYear} - Peralta Asociados. Todos los derechos reservados.
        </p>
        <p>
          Desarrollado por
          <a
            href="https://mi-portafolio-ivan.vercel.app/"
            class="text-secondary hover:text-secondary/80 transition-colors duration-300"
            target="_blank"
            rel="noopener noreferrer"
          >
            Ivan Yarupaitan Rivera
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
