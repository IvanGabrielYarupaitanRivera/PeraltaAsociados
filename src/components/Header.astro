<header class="bg-white">
  <!-- Primera fila - Redes sociales y teléfono -->
  <div class="bg-[#171E60] text-white py-2">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <!-- Redes sociales -->
      <div class="items-center gap-4 flex">
        <a href="#" class="hover:text-[#D4AF37] transition-colors duration-300">
          <span class="sr-only">Facebook</span>
          <svg
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <button
              class="text-white px-4 sm:px-8 py-2 sm:py-3 bg-sky-700 hover:bg-sky-800"
              >Submit</button
            >

            <path
              d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
            ></path>
          </svg>
        </a>
        <a href="#" class="hover:text-[#D4AF37] transition-colors duration-300">
          <span class="sr-only">LinkedIn</span>
          <svg
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
      </div>
      <!-- Teléfono -->
      <div class="flex items-center gap-2">
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          ></path>
        </svg>
        <span class="text-sm">+51 123 456 789</span>
      </div>
    </div>
  </div>

  <!-- Segunda fila - Logo, navegación y correo -->
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="text-[#171E60] font-serif">
        <h1 class="text-2xl font-bold">Peralta Asociados</h1>
      </div>

      <!-- Navegación -->
      <nav class="hidden md:block">
        <ul class="flex gap-8">
          <li>
            <a
              href="#"
              class="text-[#171E60] hover:text-[#D4AF37] transition-colors duration-300"
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-[#171E60] hover:text-[#D4AF37] transition-colors duration-300"
              >Servicios</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-[#171E60] hover:text-[#D4AF37] transition-colors duration-300"
              >Nosotros</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-[#171E60] hover:text-[#D4AF37] transition-colors duration-300"
              >Contacto</a
            >
          </li>
        </ul>
      </nav>

      <!-- Correo -->
      <div class="hidden md:flex items-center gap-2 text-[#171E60]">
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        <span class="text-sm">info@peraltaasociados.com</span>
      </div>

      <!-- Botón menú móvil -->
      <button class="md:hidden text-[#171E60]">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
