---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import mapImage from "../../assets/images/contacto/location-contact.webp";
---

<article
  class="p-8 rounded-sm shadow-lg transform hover:shadow-xl transition-all duration-300 bg-white"
  id="ubicacion"
>
  <!-- Encabezado con ícono -->
  <header class="flex items-center gap-4 mb-6">
    <div class="p-3 rounded-full bg-red-100">
      <Icon
        name="mdi:map-marker"
        class="w-6 h-6 text-red-500"
        aria-hidden="true"
      />
    </div>
    <div>
      <h2 class="font-serif text-2xl text-primary mb-1">Nuestra Ubicación</h2>
      <p class="text-sm text-gray-500 text-pretty line-clamp-1">
        Visítenos en horario de oficina
      </p>
    </div>
  </header>

  <!-- Imagen y descripción -->
  <div class="space-y-6 mb-8">
    <figure
      class="aspect-square w-full max-w-sm mx-auto overflow-hidden rounded-sm"
    >
      <Image
        src={mapImage}
        alt="Ubicación del estudio jurídico Peralta Asociados en Huancavelica"
        class="w-full h-full object-cover"
        width={400}
        height={400}
        loading="lazy"
      />
    </figure>

    <div class="space-y-4">
      <p class="text-gray-600 leading-relaxed text-pretty line-clamp-3">
        Visite a su <strong>abogado en Huancavelica</strong>. Cerca del Complejo
        Deportivo Virgen de la Candelaria en el Barrio San Cristobal.
      </p>
    </div>
  </div>

  <!-- CTA -->
  <footer class="space-y-4">
    <a
      href="https://maps.app.goo.gl/SNb1dv2wx7EoXoKh7"
      class="inline-flex items-center justify-center gap-2 w-full px-6 py-3 bg-red-600 text-white rounded-sm hover:bg-red-700 transform hover:translate-y-[-1px] transition-all duration-300 shadow-sm hover:shadow group"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Ver ubicación del abogado en Huancavelica en Google Maps"
    >
      <Icon
        name="mdi:map-marker"
        class="w-5 h-5 transition-transform group-hover:scale-110"
      />
      <span class="font-medium">Ver en Google Maps</span>
    </a>

    <p class="text-xs text-center text-gray-500">
      Horario de atención: Lunes a Viernes 8:00 AM - 8:00 PM
    </p>
  </footer>
</article>
