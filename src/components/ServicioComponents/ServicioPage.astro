---
import Footer from "../Footer.astro";
import Header from "../Header.astro";
import ServiciosHero from "./ServiciosHero.astro";
import ServicioVentajas from "./ServicioVentajas.astro";

interface Props {
  title: string;
  description: string;
  ventajas: {
    titulo: string;
    descripcion: string;
    icono: string;
  }[];
}

const { title, description, ventajas } = Astro.props;
---

<div id="container" class="flex flex-col min-h-screen">
  <Header />

  <main class="flex-1">
    <ServiciosHero title={title} description={description} />
    <ServicioVentajas ventajas={ventajas} />
  </main>

  <Footer />
</div>
