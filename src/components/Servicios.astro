---
import { Icon } from "astro-icon/components";
---

<section class="py-20 relative bg-neutral-100" id="servicios">
  <div class="absolute inset-0 opacity-30">
    <svg
      width="100%"
      height="100%"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <pattern
        id="subtle-pattern"
        x="0"
        y="0"
        width="40"
        height="40"
        patternUnits="userSpaceOnUse"
      >
        <!-- Patrón geométrico simple -->
        <path
          d="M0 20h40M20 0v40"
          stroke="#171E60"
          stroke-width="0.5"
          stroke-opacity="0.1"
          fill="none"></path>
        <circle cx="20" cy="20" r="1" fill="#171E60" fill-opacity="0.1"
        ></circle>
      </pattern>

      <rect width="100%" height="100%" fill="url(#subtle-pattern)"></rect>
    </svg>
  </div>

  <div class="relative z-10">
    <div class="container mx-auto px-4">
      <!-- Texto decorativo -->
      <div class="flex items-center gap-4 mb-8">
        <div class="sm:block h-[2px] flex-1 bg-secondary"></div>
        <p
          class="text-secondary font-medium tracking-wide uppercase text-sm whitespace-nowrap"
        >
          Defendiendo sus derechos
        </p>
        <div class="sm:block h-[2px] flex-1 bg-secondary"></div>
      </div>

      <!-- Encabezado de sección -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="font-serif text-3xl md:text-4xl text-primary font-bold mb-4">
          Nuestros Servicios Legales
        </h2>
        <p class="text-gray-600">
          Soluciones legales claras y efectivas para proteger sus derechos
        </p>
      </div>

      <!-- Grid de servicios -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8"></div>
    </div>
  </div>
</section>
