---
interface Props {
  title?: string;
  description?: string;
  pageUrl?: string; 
  keywords?: string; 
  schema?: {
    name?: string;
    description?: string;  
  };
}

const {
  title = "Peralta Asociados | Abogado en Huancavelica",
  description = "Abogado especializado en Huancavelica. Expertos en derecho laboral, civil y administrativo. Consulta gratuita con el Dr. Ciro Peralta.",
  pageUrl = "https://peraltaasociados.com", 
  keywords = "abogado huancavelica, asesoría legal, derecho civil, derecho laboral, derecho administrativo, derecho constitucional, servicios legales perú, peralta asociados perú", 
  schema = {
    name: "Peralta Asociados",
    description: "Asesoría legal especializada en Huancavelica..." 
  }
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, "https://peraltaasociados.com")
  .href;
---

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LawFirm",
    "name": schema.name,
    "image": "/images/og-image.jpg",
    "url": pageUrl,
    "description": schema.description,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Jr. Mayta Cápac N° 215",
      "addressLocality": "Huancavelica",
      "addressRegion": "Huancavelica",
      "postalCode": "",
      "addressCountry": "PE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "-12.7869",
      "longitude": "-74.9731"
    },
    "telephone": "+51976762237",
    "email": "cyarupaitanp@gmail.com",
    "sameAs": ["https://www.facebook.com/PeraltaAsociadosPeru"],
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "09:00",
        "closes": "18:00"
      }
    ],
    "priceRange": "$$",
    "areaServed": {
      "@type": "City",
      "name": "Huancavelica"
    }
  }
</script>

<html lang="es">
  <head>
    <meta
      name="google-site-verification"
      content="X9ZpfzQYW6XW9Qskd50SJe1JMEgTGkCHv7uQbQxxD1o"
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon para modo claro -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon-light.svg"
      media="(prefers-color-scheme: light)"
    />

    <!-- Favicon para modo oscuro -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon-dark.svg"
      media="(prefers-color-scheme: dark)"
    />

    <!-- SEO Básico -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://peraltaasociados.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/og-image.jpg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://peraltaasociados.com/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-image.jpg" />

    <!-- Local Business Meta Tags -->
    <meta name="city" content="Huancavelica" />
    <meta name="state" content="Huancavelica" />
    <meta name="country" content="Perú" />
    <meta name="zipcode" content="09001" />
    <meta name="target" content="Huancavelica, Perú" />
    <meta name="subject" content="Servicios Legales en Huancavelica" />

    <!-- Palabras clave -->
    <meta
      name="keywords"
      content={keywords}
    />

    <!-- Información adicional -->
    <meta name="author" content="Peralta Asociados" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Metadatos alternativos -->
    <link
      rel="alternate"
      href="https://peraltaasociados.com"
      hreflang="es-PE"
    />
    <meta name="geo.region" content="PE-HUV" />
    <meta name="geo.placename" content="Huancavelica" />
    <meta name="geo.position" content="-12.7869;-74.9731" />
    <meta name="ICBM" content="-12.7869, -74.9731" />
  </head>
  <body>
    <slot />
  </body>
</html>
