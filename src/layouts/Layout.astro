---
// Layout.astro
const SITE_TITLE = "Peralta Asociados | Abogado en Huancavelica";
const SITE_DESCRIPTION =
  "Asesoría legal especializada en Huancavelica. Expertos en derecho civil, laboral, administrativo y constitucional con más de 15 años de experiencia.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta
      name="google-site-verification"
      content="X9ZpfzQYW6XW9Qskd50SJe1JMEgTGkCHv7uQbQxxD1o"
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon para modo claro -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon-light.svg"
      media="(prefers-color-scheme: light)"
    />

    <!-- Favicon para modo oscuro -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon-dark.svg"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Precargar fuentes críticas -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;700&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- SEO Básico -->
    <meta name="generator" content={Astro.generator} />
    <title>{SITE_TITLE}</title>
    <meta name="description" content={SITE_DESCRIPTION} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://peraltaasociados.com/" />
    <meta property="og:title" content={SITE_TITLE} />
    <meta property="og:description" content={SITE_DESCRIPTION} />
    <meta property="og:image" content="/images/og-image.jpg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://peraltaasociados.com/" />
    <meta name="twitter:title" content={SITE_TITLE} />
    <meta name="twitter:description" content={SITE_DESCRIPTION} />
    <meta name="twitter:image" content="/images/og-image.jpg" />

    <!-- Palabras clave -->
    <meta
      name="keywords"
      content="abogado huancavelica, asesoría legal, derecho civil, derecho laboral, derecho administrativo, derecho constitucional, servicios legales perú"
    />

    <!-- Información adicional -->
    <meta name="author" content="Peralta Asociados" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://peraltaasociados.com/" />

    <!-- Metadatos alternativos -->
    <link
      rel="alternate"
      href="https://peraltaasociados.com"
      hreflang="es-PE"
    />
    <meta name="geo.region" content="PE-HUV" />
    <meta name="geo.placename" content="Huancavelica" />
    <meta name="geo.position" content="-12.7869;-74.9731" />
    <meta name="ICBM" content="-12.7869, -74.9731" />
  </head>
  <body>
    <slot />
  </body>
</html>
