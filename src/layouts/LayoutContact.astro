      name="keywords"
      content="abogado huancavelica, contactar abogado huancavelica, asesoría legal huancavelica, consulta legal gratuita huancavelica, Dr Ciro Peralta abogado, estudio jurídico huancavelica, abogado cerca de mí huancavelica"
    />

    <!-- Información adicional -->
    <meta name="author" content="Peralta Asociados" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Metadatos alternativos -->
    <link
      rel="alternate"
      href="https://peraltaasociados.com"
      hreflang="es-PE"
    />
    <meta name="geo.region" content="PE-HUV" />
    <meta name="geo.placename" content="Huancavelica" />
    <meta name="geo.position" content="-12.7869;-74.9731" />
