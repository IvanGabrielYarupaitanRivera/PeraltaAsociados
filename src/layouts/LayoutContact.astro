---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Contactar Abogado en Huancavelica | Dr. Ciro Peralta",
  description = "Contacte a su abogado en Huancavelica. Consulta gratuita con el Dr. Ciro Peralta, abogado especializado con más de 15 años de experiencia en Huancavelica. Agenda tu cita ahora.",
} = Astro.props;

const canonicalPath = Astro.url.pathname.endsWith("/")
  ? Astro.url.pathname
  : Astro.url.pathname + "/";
const canonicalUrl = new URL(canonicalPath, "https://peraltaasociados.com")
  .href;
---

