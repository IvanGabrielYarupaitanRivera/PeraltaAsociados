      "@type": "PostalAddress",
      "streetAddress": "Jr. Mayta Cápac N° 215",
      "addressLocality": "Huancavelica",
      "addressRegion": "Huancavelica",
      "postalCode": "",
      "addressCountry": "PE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "-12.7869",
      "longitude": "-74.9731"
    },
    "telephone": "+51976762237",
    "email": "cyarupaitanp@gmail.com",
    "sameAs": ["https://www.facebook.com/PeraltaAsociadosPeru"],
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "09:00",
        "closes": "18:00"
      }
    ],
    "priceRange": "$$",
    "areaServed": {
      "@type": "City",
      "name": "Huancavelica"
    },
    "ContactPoint": {
      "@type": "ContactPoint",
      "telephone": "+51976762237",
      "contactType": "Consultas legales",
      "availableLanguage": ["Spanish"],
      "areaServed": "Huancavelica"
