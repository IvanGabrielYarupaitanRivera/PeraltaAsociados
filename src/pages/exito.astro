---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <section class="min-h-screen relative bg-neutral-100">
    <!-- Patrón de fondo -->
    <div class="absolute inset-0 opacity-30">
      <svg
        width="100%"
        height="100%"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <pattern
          id="subtle-pattern"
          x="0"
          y="0"
          width="40"
          height="40"
          patternUnits="userSpaceOnUse"
        >
          <!-- Patrón geométrico simple -->
          <path
            d="M0 20h40M20 0v40"
            stroke="#171E60"
            stroke-width="0.5"
            stroke-opacity="0.2"
            fill="none"
          >
          </path>
          <circle cx="20" cy="20" r="1" fill="#171E60" fill-opacity="0.2">
          </circle>
        </pattern>

        <rect width="100%" height="100%" fill="url(#subtle-pattern)"></rect>
      </svg>
    </div>

    <!-- Contenido -->
    <main
      class="relative z-10 flex flex-col justify-center items-center min-h-screen p-4"
    >
      <div class="max-w-lg w-full bg-white p-8 md:p-12 rounded-sm shadow-lg">
        <!-- Ícono de éxito -->
        <div class="mb-8 flex justify-center">
          <div class="rounded-full bg-primary/10 p-4">
            <Icon name="mdi:check-circle" class="w-16 h-16 text-primary" />
          </div>
        </div>

        <!-- Mensaje -->
        <header class="text-center space-y-4">
          <h1 class="font-serif text-3xl md:text-4xl text-primary font-bold">
            ¡Gracias por contactarnos!
          </h1>
          <p class="text-gray-600 text-lg">
            Hemos recibido tu mensaje y pronto nos pondremos en contacto
            contigo.
          </p>
        </header>

        <!-- Línea decorativa -->
        <div class="my-8 flex items-center gap-4">
          <span class="h-[1px] flex-1 bg-secondary"></span>
          <Icon name="mdi:scale-balance" class="w-6 h-6 text-secondary" />
          <span class="h-[1px] flex-1 bg-secondary"></span>
        </div>

        <!-- Navegación de regreso -->
        <nav class="text-center" aria-label="Navegación principal">
          <a
            href="/"
            class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white hover:bg-primary/90 font-medium transition-all duration-300 rounded-sm group"
            aria-label="Volver a la página principal"
          >
            <Icon
              name="mdi:arrow-left"
              class="w-5 h-5 transition-transform group-hover:-translate-x-1"
              aria-hidden="true"
            />
            <span>Volver al inicio</span>
          </a>
        </nav>
      </div>
    </main>
  </section>
</Layout>
